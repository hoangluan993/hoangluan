<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout 
        android:id="@+id/diawoay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        >
    <ImageView 
        android:id="@+id/woaydia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/default_cover_big"
        />
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_cd_center"
        android:layout_centerInParent="true"
        />
	</RelativeLayout>
	<Spinner 
	    android:layout_marginTop="10dp"
	    android:layout_below="@id/diawoay"
	    android:id="@+id/spin"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    
	    />
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/spin"
	    android:orientation="vertical"
	    >
	    <TextView 
	        android:id="@+id/tenduoidia"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Tên: Hoàng Luân"
	        android:layout_gravity="center_horizontal"
	        />
	    <TextView 
	        android:id="@+id/tacgiaduoidia"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="Tác giả: Hoàng Luân"
	        android:layout_gravity="center_horizontal"
	        />
	    
	</LinearLayout>
	
    
</RelativeLayout>
