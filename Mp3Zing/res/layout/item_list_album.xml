<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp" >

    <RelativeLayout 
        android:id="@+id/album"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="7dp"
        >
    <ImageView
        android:scaleType="centerInside"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/default_album_thumbnail" />
	</RelativeLayout>
	 <RelativeLayout 
	     android:id="@+id/spin"
        android:layout_width="30dp"
        android:layout_height="75dp"
         android:layout_alignParentRight="true"
        >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_showaction"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/album"
        android:layout_toLeftOf="@id/spin"
        android:layout_marginRight="5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tenalbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000" 
            android:textSize="15dp"
            android:singleLine="true"
            />

        <TextView
            android:id="@+id/nhacalbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000" 
            android:textSize="15dp"
            android:singleLine="true"
            />
    </LinearLayout>
    

</RelativeLayout>