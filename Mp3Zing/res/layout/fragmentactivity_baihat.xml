<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res/com.example.mp3zing">
	<Library.PagerSlidingTabStrip
	    android:id="@+id/tabs"
	    android:layout_width="match_parent"
	    android:layout_height="44dp"
	    app:pstsShouldExpand="true"
	    app:pstsTextAllCaps="true"
	    app:pstsIndicatorColor="#9e61b8"
	    app:pstsUnderlineColor="#c1c1c1"
	    app:pstsDividerColor="#ae79c4" 
	    android:background="#f2f2f2"
	    android:layout_below="@id/a"
	    >
	    
	</Library.PagerSlidingTabStrip>
	  <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tabs"
        android:background="#ffffff"
        />
	
</RelativeLayout>